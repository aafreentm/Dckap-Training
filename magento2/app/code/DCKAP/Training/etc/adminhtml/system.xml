<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
     <system>
         <tab id="tab_id" translate="label" sortOrder="110">
             <label>My Project</label>
         </tab>
         <section id="sectiondckap" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
             <class>separator-top</class>
             <label>DCKAP</label>
             <tab>tab_id</tab>
             <resource>DCKAP_Training::configuration</resource>

             <group id="groupdckap" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                 <label>General Configuration</label>
                 <attribute type="expanded">1</attribute>
                 <field id="fielddckap" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                     <label>Enable Module</label>
                     <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                 </field>
             </group>
            
        </section>
        <section id="section_custombanner" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
             <class>separator-top</class>
             <label>Custom Banner</label>
             <tab>tab_id</tab>
             <resource>DCKAP_Training::configuration</resource>

             <group id="group_custombanner" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                 <label>General Custom Banner Configuration</label>
                 <attribute type="expanded">1</attribute>
                 <field id="upload_image_id" translate="Custom Banner" type="image" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Banner Image</label>
                    <backend_model>DCKAP\Training\Model\Config\Backend\Image</backend_model>
                    <base_url type="media" scope_info="1">custom_banner\banner</base_url>
                </field>
             </group>
            
        </section>
     </system>
</config>